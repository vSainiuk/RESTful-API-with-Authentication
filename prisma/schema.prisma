generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") 
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String
  email     String   @unique
  password  String
  tasks     Task[]
  role      String   @default("user")
}

model Task {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  user        User    @relation(fields: [userId], references: [id])
  userId      Int
}
